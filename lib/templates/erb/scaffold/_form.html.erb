<%%= form_for @<%= singular_table_name %> , :html => {:class => 'form-horizontal'}  do |f| %>
<%% if @<%= singular_table_name %>.errors.any? %>
<fieldset id="erros">
   <div class="ui-state-error ui-corner-all" style="padding: 5px; width: 50%">
     <h4><%%= t('errors.messages.titulo') %>:</h4>
     <br>
     <ul>
       <%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
         <li><%%= msg %></li>
       <%% end %>
     </ul>
   </div>
</fieldset>
<%% end %>
<br>
<div class="row-fluid">
	<div class="span12">
    <div class="row-fluid">
      <div class="span4"> 
        <% attributes.each do |attribute| -%>
          <div class="control-group">    
       	     <%%= f.label :<%= attribute.name %> , :class => 'control-label' %>
    		     <div class="controls">
    	         <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
    	       </div>
          </div>
        <% end -%>
      </div>  <!-- span4 --> 
    </div> <!-- row-fluid columns --> 
  </div> <!-- span12 --> 
</div> <!-- row-fluid root --> 
  <div class="form-actions">
    <%%= f.submit t('botao.salvar'), :class => "btn btn-primary" %>&nbsp;
    <a class="btn" href="<%%= <%= plural_table_name %>_path %>"><%%= t('botao.cancelar')%></a>
  </div>
<%% end %>

<script>

 $('#<%= singular_table_name %>_descricao').focus();

</script>